<%- include("header") -%>
<%- include("sidenav") -%>




<div id="main">
    <div class="row">
      <div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
      <div class="col s12">
        <div class="container"></div>

        <form method="POST" action="/host-events/" class="col s12">

          <div class="row mt-0">

              <div class="input-field col m4 s12">
              <select name = "v_id">
                  <% rows.forEach(function(row) { %>
                  <option value="<%= row.v_id %>">
                     <%= row.v_name %> 
                  </option>
                  <% }); %>


                </select>
              </div>



              <div class="input-field col m2 s12">
                <!-- <i class="material-icons prefix">lock_outline</i> -->
                <input name="day" id="icon_password" type="date" class="validate">
                <label for="icon_password" class="">Date</label>
              </div>

              <div class="input-field col m2 s12">
                  <!-- <i class="material-icons prefix">lock_outline</i> -->
                  <input name="start_time" id="icon_password" type="time" class="validate">
                  <label for="icon_password" class="">Start Time</label>
                </div>


                <div class="input-field col m2 s12">
                    <!-- <i class="material-icons prefix">lock_outline</i> -->
                    <input name="end_time" id="icon_password" type="time" class="validate">
                    <label for="icon_password" class="">End Time</label>
                  </div>
              
    
              <div class="input-field col m2 s2">
                  <div class="input-field col s2">
                    <button class="waves-effect waves-circle waves-light btn-floating btn-medium secondary-content gradient-45deg-light-blue-cyan" type="submit">
                      <i class="material-icons">add</i></button>
                  </div>
                </div>

              <input name="s_id"  type="hidden" value="<%= rows[0].s_id %>">

           </div>
        </form>

      </div>
  </div>
</div>


 <!-- %- include("theme-customizer") -% -->


<%- include("footer") -%>
