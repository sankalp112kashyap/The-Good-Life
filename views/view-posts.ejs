<%- include("header") -%>


<%- include("sidenav") -%>

<style>
    .bigtext{
        font-size: 200px;
    }
</style>

    <!-- BEGIN: Page Main-->
    <div id="main">
      <div class="row">
        <div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
        <div class="col s12">
          <div class="container">
          

  <div class="col s12 ">
      <div id="inline-form" class="card card card-default scrollspy">
        <div class="card-content">

             <div id="view-higlight-table" class="active">
              <div class="row">
                    <div class="col s12">
                      <table class="highlight">
                        <tbody>

                          <% all_urls.forEach(function(item) { %>
                            <td>  
                              <center> <p class="flow-text"><span class="purple-text text-darken-2" class="card-title bigtext"><%=item.post_text%></span></p>
                              </center>
                                <br/>
                                <br/>
                                 <div class="video-container">
                                    <iframe width="853" height="480" frameborder="0" src="<%=item.video_url%>" ></iframe>
                                </div>

                                
                                <form method="post" action="/comments">
                                <div class="row mt-0">
                                
                                <div class="input-field col m9 s6">
                                        <input id="comments" name="comments" type="text" >
                                       <label for="last_name"><center>Add Comment</center></label>
                                </div> 
                                

                                <div class="input-field col m1 s2">
                                        <input name="id1" id="hour" type="hidden" value="<%=item.post_id%>">

                                        <div class="input-field col m1 s2">
                                            <div class="input-field col m2 s2">
                                              <button  class="waves-effect waves-circle waves-light btn-floating btn-medium secondary-content gradient-45deg-light-blue-cyan" type="submit">
                                                <i class="material-icons">add</i></button>
                                            </div>
                                          </div>

                                        
                                
                                        </div> 

                                      </form>
                                      <div class="input-field col m1 s2">
                                          <form method="post" action="/likes">
                                            <input name="id1" id="hour" type="hidden" value="<%=item.post_id%>">
                                            <div class="input-field col m1 s2">
                                                <div class="input-field col s2">
                                                  <button  class="waves-effect waves-circle waves-light btn-floating btn-medium secondary-content gradient-45deg-light-blue-cyan" type="submit">
                                                    <i class="material-icons">plus_one</i></button>
                                                </div>
                                              </div>
                                        </form>
                                      </div>
                                      </div>
                                      </div>
                                      </div>
                                      </div>
                                      
                            
                            </td>
                          </tr>
                          <% }) %>

                      </table>

                    </div>
              </div>
          </div>
        </div>
      </div>
    </div>


